import java.util.Scanner;
public class main
{   
    public static void main(String[] args)
    {   
        Scanner sc = new Scanner(System.in);
    
        System.out.println("1부터 n까지의 합 구하기");

        do{
            System.out.print("n의 값 : ");
             int n = sc.nextInt();
        } while(n<=0);

        int sum = 0;
       for( int i =1 ; i < n ; i++){
           sum += i
       }
        System.out.print(sum);

    }
}
